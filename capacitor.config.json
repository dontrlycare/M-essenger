{
    "appId": "com.messenger.app",
    "appName": "M-essenger",
    "webDir": "www",
    "server": {
        "cleartext": true
    },
    "android": {
        "allowMixedContent": true
    },
    "ios": {
        "contentInset": "automatic",
        "allowsLinkPreview": false,
        "scrollEnabled": false,
        "limitsNavigationsToAppBoundDomains": true
    },
    "plugins": {
        "SplashScreen": {
            "launchAutoHide": true,
            "backgroundColor": "#0d0d0d",
            "showSpinner": false
        }
    }
}