{
    "name": "m-essenger",
    "version": "1.0.0",
    "description": "M-essenger - Modern Messenger Application",
    "main": "index.html",
    "scripts": {
        "build": "node -e \"const fs=require('fs');const path=require('path');const www='www';if(!fs.existsSync(www))fs.mkdirSync(www,{recursive:true});['index.html','mobile.css','icon.png'].forEach(f=>{if(fs.existsSync(f))fs.copyFileSync(f,path.join(www,f))});const copyDir=(src,dest)=>{if(!fs.existsSync(src))return;if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>{const s=path.join(src,f),d=path.join(dest,f);fs.statSync(s).isDirectory()?copyDir(s,d):fs.copyFileSync(s,d)})};copyDir('desktop',path.join(www,'desktop'));\""
    },
    "devDependencies": {
        "@capacitor/android": "^5.7.8",
        "@capacitor/cli": "^5.7.8",
        "@capacitor/core": "^5.7.8"
    },
    "dependencies": {
        "@capacitor/ios": "^5.7.8"
    }
}